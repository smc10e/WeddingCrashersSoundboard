<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity" >
    <ImageView
        android:src="@drawable/intro"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/introImage">
    </ImageView>
 	<Button
 	    android:id="@+id/help_button" 
		android:text="@string/help" 
		android:layout_width="wrap_content"
		android:layout_height="40dp"
		android:layout_toLeftOf="@+id/toggle"
		android:textSize="10dp"
		android:background="#07000000"
		android:clickable="true">
	</Button>
	<ToggleButton 
   		android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/check"  
        android:layout_margin="10dp"
        android:textOn=""
        android:textOff=""
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true">
	    <Button
		     android:id="@+id/select_char_button" 
		     android:text="@string/select_character"
		     android:textColor="@color/red" 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:clickable="true"
		     android:onClick="page1">
	    </Button>
	    <Button
		     android:id="@+id/play_trailer_button" 
		     android:text="@string/play_trailer"
		     android:textColor="@color/red" 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center"
		     android:clickable="true">
	    </Button>
	    <Button
		     android:id="@+id/buy_movie_button" 
		     android:text="@string/buy_the_movie"
		     android:textColor="@color/red" 
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_gravity="center"
		     android:clickable="true">
	    </Button>
	    </LinearLayout>
</RelativeLayout>
